<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:id="@+id/layout_course_list_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:textSize="15sp"
        android:id="@+id/lbl_course_item_title"
        android:layout_toStartOf="@+id/btn_course_item_delete"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@+id/btn_course_item_delete"/>

    <Button
        android:text="Delete"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:textSize="10sp"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_course_item_delete"
        android:layout_marginEnd="14dp"/>

</RelativeLayout>
